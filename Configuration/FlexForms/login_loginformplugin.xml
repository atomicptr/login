<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <Main>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Authentication</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <settings.usernameField>
                        <TCEforms>
                            <label>View after authentication</label>
                            <config>
                                <type>select</type>
                                <items>
                                    <numIndex index="0">
                                        <numIndex index="0">Username</numIndex>
                                        <numIndex index="1">username</numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">E-Mail</numIndex>
                                        <numIndex index="1">email</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.usernameField>

                    <settings.authenticatedView>
                        <TCEforms>
                            <label>View after authentication</label>
                            <config>
                                <type>select</type>
                                <items>
                                    <numIndex index="0">
                                        <numIndex index="0">Greeting</numIndex>
                                        <numIndex index="1">greetings</numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">User details</numIndex>
                                        <numIndex index="1">details</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">Nothing</numIndex>
                                        <numIndex index="1">nothing</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.authenticatedView>

                </el>
            </ROOT>
        </Main>
        <Redirect>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Redirects</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <settings.redirectAfterLogin>
                        <TCEforms>
                            <exclude>0</exclude>
                            <label>
                                Redirect after login <!-- TODO: translate me -->
                            </label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                            </config>
                        </TCEforms>
                    </settings.redirectAfterLogin>

                    <settings.redirectAfterLogout>
                        <TCEforms>
                            <exclude>0</exclude>
                            <label>
                                Redirect after logout <!-- TODO: translate me -->
                            </label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                            </config>
                        </TCEforms>
                    </settings.redirectAfterLogout>

                </el>
            </ROOT>
        </Redirect>
    </sheets>
</T3DataStructure>
